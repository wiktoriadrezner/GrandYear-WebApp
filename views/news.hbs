                <label class="form-label" for="newsImage">Image</label>
                <input id="newsImage" class="form-input" type="file" />
            </div>
            <div class="formPackage">
                <label class="form-label" for="newsPost">Post</label>
                <textarea id="newsPost" class="form-input" placeholder="Post Content" rows="8"></textarea>
            </div>
            <button id="faqSubmit" class="btn btnSubmit">Publish</button>
        </form>
        <!-- List of News -->
        <div id="listOfNews">

        </div>
    </div>
